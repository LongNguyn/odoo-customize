<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sonha_x_purchase_budget_tree_view" model="ir.ui.view">
        <field name="name">sonha.x.purchase.budget.tree.view</field>
        <field name="model">x.purchase.budget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
<!--                còn nhiều trường khác-->
            </tree>
        </field>
    </record>

    <record id="sonha_x_purchase_budget_form_view" model="ir.ui.view">
        <field name="name">sonha.x.purchase.budget.form.view</field>
        <field name="model">x.purchase.budget</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
<!--                còn nhiều trường khác-->
            </form>
        </field>
    </record>

    <record id="action_x_purchase_budget_view" model="ir.actions.act_window">
        <field name="name">Ngân sách</field>
        <field name="res_model">x.purchase.budget</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>