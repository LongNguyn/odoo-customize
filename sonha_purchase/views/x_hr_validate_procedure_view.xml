<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sonha_x_hr_validate_procedure_tree_view" model="ir.ui.view">
        <field name="name">sonha.x.hr.validate.procedure.tree.view</field>
        <field name="model">x.hr.validate.procedure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="x_validate_license_type"/>
            </tree>
        </field>
    </record>

    <record id="sonha_x_hr_validate_procedure_form_view" model="ir.ui.view">
        <field name="name">sonha.x.hr.validate.procedure.form.view</field>
        <field name="model">x.hr.validate.procedure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="x_validate_license_type"/>
                        <field name="x_domain"/>
                        <field name="x_extend_title"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_x_hr_validate_procedure_view" model="ir.actions.act_window">
        <field name="name">Quy trình phê duyệt</field>
        <field name="res_model">x.hr.validate.procedure</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>