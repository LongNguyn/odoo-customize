<odoo>
    <data>
        <record id="sonha_purchase_request_tree_view" model="ir.ui.view">
            <field name="name">sonha.purchase.request.tree.view</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="x_descript"/>
                </tree>
            </field>
        </record>

        <record id="sonha_purchase_request_form_view" model="ir.ui.view">
            <field name="name">sonha.purchase.request.form.view</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="x_descript"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sonha_purchase_request" model="ir.actions.act_window">
            <field name="name">Đề nghị đặt hàng (PR)</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>