<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_config_form_tree" model="ir.ui.view">
        <field name="name">config.form.tree</field>
        <field name="model">form.reward.config</field>
        <field name="arch" type="xml">
            <tree string="Config Form" editable="bottom">
                <field name="id"/>
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="config_form_action" model="ir.actions.act_window">
        <field name="name">Cấu hình Hình thức khen thưởng, kỷ luật</field>
        <field name="res_model">form.reward.config</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>