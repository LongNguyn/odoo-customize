<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_config_state_tree" model="ir.ui.view">
        <field name="name">config.state.tree</field>
        <field name="model">state.reward.config</field>
        <field name="arch" type="xml">
            <tree string="Config State" editable="bottom">
                <field name="id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="config_state_action" model="ir.actions.act_window">
        <field name="name">Cấu hình Trạng thái</field>
        <field name="res_model">state.reward.config</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>