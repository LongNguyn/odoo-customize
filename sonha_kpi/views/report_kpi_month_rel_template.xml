<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_kpi_month_rel_template" name="KPI Form">
        <t t-call="web.html_container">
            <div class="container">
                <h2>Báo cáo cấp trên kpi theo tháng</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2">NỘI DUNG CÔNG VIỆC Đã giao ở mục tiêu/ KPIs cả năm</th>
                            <th rowspan="2">NỘI DUNG CÔNG VIỆC CỤ THỂ<br/>(Tối đa 8 và tối thiểu 3 mục tiêu)</th>
                            <th colspan="2">THỜI GIAN THỰC HIỆN</th>
                            <th rowspan="2">TIÊU CHÍ ĐÁNH GIÁ RÚT GỌN</th>
                            <th rowspan="2">KẾT QUẢ HOÀN THÀNH ĐƠN VỊ ĐÁNH GIÁ</th>
                            <th rowspan="2">MÔ TẢ CHI TIẾT CÔNG VIỆC</th>
                            <th rowspan="2">KẾT QUẢ HOÀN THÀNH CẤP THAM QUYỀN ĐÁNH GIÁ</th>
                            <th rowspan="2">NHẬN XÉT CỦA CẤP CÓ THAM QUYỀN</th>
                        </tr>
                        <tr>
                            <th>Bắt đầu</th>
                            <th>Hoàn thành</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="kpi_records" t-as="kpi">
                            <tr>
                                <td rowspan="4"><t t-esc="kpi.kpi_year_id.name"/></td>
                                <td rowspan="4"><t t-esc="kpi.small_items_each_month.small_items_each_month"/></td>
                                <td rowspan="4"><t t-esc="kpi.start_date"/></td>
                                <td rowspan="4"><t t-esc="kpi.end_date"/></td>
                                <td>Khối lượng công việc thực hiện</td>
                                <td><t t-esc="kpi.dv_amount_work"/></td>
                                <td rowspan="4"><t t-esc="kpi.dv_description"/></td>
                                <td><input type="number" class="form-control kpi-input" t-att-data-id="kpi.id" t-att-data-field="tq_amount_work" t-att-value="kpi.tq_amount_work"/></td>
                                <td rowspan="4"><input type="text" class="form-control kpi-input" t-att-data-id="kpi.id" t-att-data-field="tq_description" t-att-value="kpi.tq_description"/></td>
                            </tr>
                            <tr>
                                <td>Chất lượng công việc thực hiện</td>
                                <td><t t-esc="kpi.dv_matter_work"/></td>
                                <td><input type="number" class="form-control kpi-input" t-att-data-id="kpi.id" t-att-data-field="tq_matter_work" t-att-value="kpi.tq_matter_work"/></td>
                            </tr>
                            <tr>
                                <td>Chấp hành nội quy, quy chế, kỷ luật lao động</td>
                                <td><t t-esc="kpi.dv_comply_regulations"/></td>
                                <td><input type="number" class="form-control kpi-input" t-att-data-id="kpi.id" t-att-data-field="tq_comply_regulations" t-att-value="kpi.tq_comply_regulations"/></td>
                            </tr>
                            <tr>
                                <td>Cải tiến, đề xuất, sáng kiến</td>
                                <td><t t-esc="kpi.dv_initiative"/></td>
                                <td><input type="number" class="form-control kpi-input" t-att-data-id="kpi.id" t-att-data-field="tq_initiative" t-att-value="kpi.tq_initiative"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const inputs = document.querySelectorAll('.kpi-input');
                    inputs.forEach(input => {
                        input.addEventListener('change', function () {
                            const kpiId = this.dataset.id;
                            const fieldName = this.dataset.field;
                            const fieldValue = this.value;

                            fetch('/kpi/update_ajax', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'X-CSRFToken': odoo.csrf_token
                                },
                                body: JSON.stringify({
                                    kpi_id: kpiId,
                                    field_name: fieldName,
                                    field_value: fieldValue
                                })
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.status === 'success') {
                                    console.log('Cập nhật thành công');
                                } else {
                                    console.error('Lỗi:', data.message);
                                }
                            })
                            .catch(error => console.error('Lỗi AJAX:', error));
                        });
                    });
                });
            </script>
        </t>
    </template>
</odoo>